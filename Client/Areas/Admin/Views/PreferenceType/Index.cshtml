<script>
    $(document).on("click", ".open-DeleteDialog", function () {

        var Id = $(this).data('id');
        var redirect = `PreferenceType/Delete/${Id}`;
        console.log(redirect)
        $("#PrefId").attr("href", redirect);
    });

    $(document).on("click", ".open-EditDialog", function () {

        var Id = $(this).data('id');

        $.ajax({
            type: "GET",
            url: `PreferenceType/Details/${Id}`,

            success: function (res) {
                console.log(res);

                $("#Title").val(res.title);
                $("#TypeId").val(res.id);
            },
            error: function (req) {
                alert("Data Fetching Failed")
            }
        });
    });


</script>
