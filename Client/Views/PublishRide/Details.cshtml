@model DataAcessLayer.Models.Rides.PublishRide

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<div>
    <h4>Ride Plan</h4>
    <hr />

    @* New Request Section *@
    @if (Model.IsInstant_Approval == false && Model.Ride_Approval.Any(x => x.IsRejected == false))
    {
        <h4>New booking Request..!</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Seats</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                <form>
                    @*////*@
                </form>
                @foreach (var item in Model.Ride_Approval)
                {
                    <tr>
                        
                        <td>@item.User.Name</td>
                        <td> @item.RequestedSeats</td>
                        <td>
                            <a class="btn btn-primary">Approve</a> |
                            <a class="btn btn-danger">Decline</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JourneyDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JourneyDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure_City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure_City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination_City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination_City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickUp_Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickUp_Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DropOff_Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DropOff_Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickUp_Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickUp_Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DropOff_Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DropOff_Time)
        </dd>


        @*Check Booking and Display Ride Partrners Name
            And Link To Their Open Profiles*@



