@model IEnumerable<DataAcessLayer.Models.Users.Uservehicle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleImage)
            </th>
            
          
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th>
                Color
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Manufacture_Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleImage)
            </td>
           
            
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.Color)
            </td>
          
            <td>
                @*@Html.DisplayFor(modelItem => item.Manufacture_Year)*@
                @item.Manufacture_Year.ToString("yyyy")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
