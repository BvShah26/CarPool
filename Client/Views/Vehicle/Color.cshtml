</main>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        var colors = null;

    </script>

    <script>



        $(document).ready(function () {
            colors = @Json.Serialize(Model);
            console.log(colors);
            var carList = "";
            $("#listbox-model").empty();

            for (var i = 0; i < colors.length;i++) {
                updateModel(colors[i]);
                if (i == 4) {
                    break;
                }
            }
            //$("#listbox-model").html(carList);
        })


    </script>
    <script>
        const getColors = (e) => {
            if (e.value != "") {
                $("#listbox-model").empty();

                $.each(colors, (i, val) => {
                    if (val.color.toLowerCase().includes(e.value.toLowerCase())) {
                        updateModel(val);
                    }
                })
            }
            else {
                $("#listbox-model").empty();

                for (var i = 0; i < colors.length; i++) {
                    updateModel(colors[i]);
                    if (i == 4) {
                        break;
                    }
                }
            }
        }
    </script>
    <script>
        const updateModel = (rec) => {
            $("#listbox-model").append(`<li class="kirk-items-list-item">
                                                                    <button type="button" onclick="clickItem(this)" class="kirk-item kirk-item--clickable sc-GVOUr CcFKY kirk-item-choice">
                                                                        <input type="hidden" class="colorId"  value=${rec.id} />

                                                                        <span class="kirk-item-leftWrapper">
                                                                            <span class="kirk-item-leftAddon">
                                                                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="kirk-icon sc-ksZaOG iaNosS" width="24" height="24" aria-hidden="true">
                                                                                    <circle cx="12" cy="12" r="9.5" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" fill="${rec.colorCode}"></circle>
                                                                                </svg>
                                                                            </span>
                                                                            <span class="kirk-item-leftText"><span class="kirk-text kirk-text-title sc-fbPSWO ldKURU" style="color: rgb(5, 71, 82);">${rec.color}</span></span>
                                                                        </span>
                                                                        <span class="kirk-item-rightAddon">
                                                                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="kirk-icon sc-ksZaOG jucjqW" width="24" height="24" aria-hidden="true">
                                                                                <polyline fill="none" stroke="#708C91" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" points="9 18 15 12 9 6"></polyline>
                                                                            </svg>
                                                                        </span>
                                                                    </button>
                                            </li>`);
        }
    </script>
    <script>
        const clickItem = (e) => {
            

            var a = $(e).find(".colorId")[0].value;
            console.log(a);

            $("#colorId").val(a);
            $("form").submit();
        }
    </script>
}